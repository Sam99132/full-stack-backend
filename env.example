# Server Configuration
PORT=5000

# CORS Configuration
# Set to '*' to allow all origins (development) or specific origin like 'http://localhost:3000' (production)
CORS_ORIGIN=*

# Neon DB Connection URLs
# Get these from your Neon project dashboard: https://console.neon.tech
# DATABASE_URL is the connection pooler URL (recommended for serverless)
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.region.aws.neon.tech/dbname?sslmode=require

# JWT Secret Key (change this to a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Environment
NODE_ENV=development

